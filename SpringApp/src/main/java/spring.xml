<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

<!-- bean definitions here -->
<bean id="lap" class="in.mindcraft.SpringApp.Laptop">
	<property name="lid" value="1001"></property>    <!-- Setter Injection-->
	<property name="make" value="Lenovo"></property>
	<property name="cost" value="45000"></property>
</bean>

<bean id="l1" class="in.mindcraft.SpringApp.Laptop"> <!-- CONSTRUCTOR INJECTION-->
	<constructor-arg value="2001"></constructor-arg>
	<constructor-arg value="apple"></constructor-arg>
	<constructor-arg value="90000"></constructor-arg>
	

</bean>

</beans>